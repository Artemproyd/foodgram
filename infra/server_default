server {
    server_name kik0f00dgram.ddns.net;

    location / {
        proxy_set_header Host $http_host;
        proxy_pass http://127.0.0.1:8000;
    }

    location /images/ {
        alias /var/www/foodgram/;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/kik0f00dgram.ddns.net/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/kik0f00dgram.ddns.net/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}


server {
    if ($host = kik0f00dgram.ddns.net) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    server_name kik0f00dgram.ddns.net;
    listen 80;
    return 404; # managed by Certbot


}

